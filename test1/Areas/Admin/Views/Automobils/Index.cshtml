@model IEnumerable<RentaCar.Entities.Automobil>

@{
    ViewData["Title"] = "Index";
}

<h1>Pregled Automobila</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tablice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipAutomobila)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokacija)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tablice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipAutomobila.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokacija.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
