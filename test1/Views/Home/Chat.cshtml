@using Microsoft.AspNetCore.Identity;
@using RentaCar.Data;
@using RentaCar.Entities

@inject SignInManager<ApplicationUser> SignInManager;

@{
    ViewData["Title"] = "Users Chat";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to chat with online users.</p>


@if (SignInManager.IsSignedIn(User))
{
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">@Model.User</div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Register/Login to see chat</h1>
    </div>
}


<div class="modal fade" id="UserLoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserLoginPartial" />
</div>
<div class="modal fade" id="UserRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserRegistrationPartial" />
</div>

@section Scripts{
    <script src="~/js/UserLogin.js"></script>
    <script src="~/js/UserRegistration.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}